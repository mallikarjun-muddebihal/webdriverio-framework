{
  "name": "wdio-framework",
  "version": "1.0.0",
  "description": "E2E test project using WDIO",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "setup": "npm install",
    "test": "mocha ./build/test/*.js --no-timeout --exit",
    "clean": "if exist build rmdir /s /q build",
    "build": "npm run clean && tsc && copyfiles testconfig.json ./build",
    "wdio": "wdio run ./wdio.conf.ts"
  },
  "author": "Mallikarjun Muddebihal",
  "license": "ISC",
  "dependencies": {
    "@types/mocha": "^10.0.0",
    "webdriverio": "^8.28.1"
  },
  "devDependencies": {
    "@types/webdriverio": "^5.0.0",
    "@wdio/cli": "^8.28.1",
    "@wdio/devtools-service": "^8.28.1",
    "@wdio/junit-reporter": "^8.28.1",
    "@wdio/local-runner": "^8.28.1",
    "@wdio/mocha-framework": "^9.19.1",
    "@wdio/spec-reporter": "^8.28.1",
    "copyfiles": "^2.4.1",
    "mocha": "^11.7.1",
    "typescript": "^5.0.0"
  }
}
