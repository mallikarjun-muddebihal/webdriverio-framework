{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2022",
        "outDir": "build",
        "lib": [
            "es2022",
            "dom"
        ],
        "types": [
            "node",
            "@wdio/types",
            "expect-webdriverio",
            "@wdio/mocha-framework",
            "mocha"
            
        ],
        "skipLibCheck": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "test",
        "wdio.conf.ts",
        "src",
        "testconfig"
    ]
}